{
  "root": true,
  "env": {
    "node": true,
    "es2023": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "quotes": "off",
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrors": "none"
      }
    ],
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-constant-condition": [
      "error",
      {
        "checkLoops": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "env": {
        "node": true
      },
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
