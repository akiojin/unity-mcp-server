{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Session Message",
  "description": "Sends a message within an existing AI session",
  "type": "object",
  "properties": {
    "sessionId": {
      "type": "string",
      "description": "Target session identifier"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "description": "Plain text message from the user"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "path": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["sessionId", "message"],
  "response": {
    "type": "object",
    "properties": {
      "messageId": { "type": "string" },
      "queued": { "type": "boolean" }
    },
    "required": ["messageId", "queued"]
  }
}
